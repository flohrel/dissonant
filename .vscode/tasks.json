{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-compose",
      "label": "docker-compose-up",
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "icon": {
        "id": "extensions"
      },
      "options": {
        "env": {
          "COMPOSE_FILE": "docker-compose.dev.yml",
        }
      },
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "profiles": [
            "default"
          ],
        },
        "files": [
          "${workspaceFolder}/docker-compose.dev.yml"
        ],
        "envFile": "${workspaceFolder}/.env.development"
      }
    },
    {
      "type": "shell",
      "dependsOn": "docker-compose-up",
      "command": "docker logs -f server_dev",
      "label": "server-log",
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "watch"
      },
      "icon": {
        "id": "output"
      }
    }
  ]
}
